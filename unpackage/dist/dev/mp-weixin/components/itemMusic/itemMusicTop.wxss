.itemMusicTop {
  width: 100%;
  height: 350rpx;
}
.top-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 300rpx;
  padding: 0 20rpx;
}
.top-content .content-left {
  width: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.top-content .content-left image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 10%;
}
.top-content .content-left .playCount {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  color: #fff;
  font-weight: 700;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.top-content .content-middle {
  display: flex;
  flex-direction: column;
  width: 50%;
  justify-content: space-between;
  height: 250rpx;
  z-index: 1;
  color: #ccc;
}
.top-content .content-middle .creator {
  display: flex;
  align-items: center;
}
.top-content .content-middle .creator image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.top-content .content-middle .description,
.top-content .content-middle .content-title {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.top-content .content-middle .content-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  -webkit-line-clamp: 2;
}
.top-content .content-right {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 1;
}

