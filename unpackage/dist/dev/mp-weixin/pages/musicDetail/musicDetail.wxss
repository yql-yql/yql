.musicDetail {
  width: 100%;
  padding: 20rpx 0;
}
.bgImg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  -webkit-filter: blur(70px) brightness(70%);
          filter: blur(70px) brightness(70%);
  z-index: 0;
}
.detail-top {
  position: absolute;
  color: #fff;
  height: 120rpx;
}
.detail-top .uni-icons {
  position: absolute;
  padding: 20rpx;
}
.detail-top .title {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.cd {
  position: relative;
  top: 320rpx;
}
.cd .cdPic {
  width: 550rpx;
  height: 550rpx;
  position: absolute;
  left: 100rpx;
  z-index: 1;
}
.cd .needle {
  width: 200rpx;
  height: 300rpx;
  position: absolute;
  left: 350rpx;
  top: -140rpx;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: rotate(-20deg);
          transform: rotate(-20deg);
  transition: all 1.5s;
  z-index: 2;
}
.cd .needle_active {
  width: 220rpx;
  height: 300rpx;
  position: absolute;
  left: 350rpx;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
  transition: all 2s;
}
.cd .ar {
  width: 350rpx;
  height: 350rpx;
  border-radius: 50%;
  position: absolute;
  top: 100rpx;
  left: 200rpx;
  -webkit-animation: rotate_ar 10s linear infinite;
          animation: rotate_ar 10s linear infinite;
}
.cd .ar_active {
  -webkit-animation-play-state: running;
          animation-play-state: running;
}
.cd .ar_paused {
  -webkit-animation-play-state: paused;
          animation-play-state: paused;
}
@-webkit-keyframes rotate_ar {
0% {
    -webkit-transform: rotateZ(0deg);
            transform: rotateZ(0deg);
}
100% {
    -webkit-transform: rotateZ(360deg);
            transform: rotateZ(360deg);
}
}
@keyframes rotate_ar {
0% {
    -webkit-transform: rotateZ(0deg);
            transform: rotateZ(0deg);
}
100% {
    -webkit-transform: rotateZ(360deg);
            transform: rotateZ(360deg);
}
}
.lyric {
  height: 800rpx;
  position: absolute;
  z-index: 10;
  overflow-y: scroll;
}
.lyric .row {
  width: 700rpx;
  color: #a1a1a1;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  z-index: 1;
  text-align: center;
}
.lyric .active {
  color: #fff;
  font-size: 40rpx;
}
.detail-footer {
  position: absolute;
  bottom: 20rpx;
  padding: 0 30rpx;
}
.detail-footer .footer-top,
.detail-footer .footer-content,
.detail-footer .footer-bottom {
  width: 660rpx;
  padding: 20rpx 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detail-footer .footer-content .slider {
  width: 700rpx;
}

